# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# For SQLite (default, no configuration needed)
# For PostgreSQL: postgresql://user:password@localhost:5432/rag_platform
DATABASE_URL=sqlite:///data/rag_platform.db
DATABASE_PATH=data/rag_platform.db

# Security Configuration
JWT_SECRET=change-this-secret-in-production-use-strong-random-string
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis Configuration (optional, for distributed rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Input Validation
MAX_QUERY_LENGTH=2000
MAX_DOCUMENT_LENGTH=100000

# Logging
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
